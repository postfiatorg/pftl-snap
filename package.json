{
  "name": "root",
  "version": "1.1.5",
  "description": "",
  "homepage": "https://postfiat.org/",
  "bugs": {
    "url": "https://github.com/postfiatorg/pftl-snap/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/postfiatorg/pftl-snap.git"
  },
  "license": "(MIT-0 OR Apache-2.0)",
  "author": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological --verbose run build",
    "lint": "yarn lint:eslint && yarn lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,jsx,ts,tsx",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!**/CHANGELOG.md' '**/*.yml' --ignore-path .gitignore",
    "start": "yarn workspaces foreach --parallel --interlaced --verbose run start",
    "test": "yarn workspace @postfiat/pftl-snap run test"
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "^3.0.0",
    "@lavamoat/preinstall-always-fail": "^2.0.0",
    "@metamask/eslint-config": "^12.2.0",
    "@metamask/eslint-config-jest": "^12.1.0",
    "@metamask/eslint-config-nodejs": "^12.1.0",
    "@metamask/eslint-config-typescript": "^12.1.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-jsdoc": "^41.1.2",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "https-browserify": "^1.0.0",
    "prettier": "^3",
    "prettier-plugin-packagejson": "^2.2.18",
    "process": "^0.11.10",
    "sharp": "^0.32.6",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "typescript": "^4.7.4",
    "url": "^0.11.4"
  },
  "resolutions": {
    "@peersyst/react-components": "file:./packages/vendor/@peersyst/react-components",
    "@peersyst/react-components-core": "file:./packages/vendor/@peersyst/react-components-core",
    "@peersyst/react-hooks": "file:./packages/vendor/@peersyst/react-hooks",
    "@peersyst/react-types": "file:./packages/vendor/@peersyst/react-types",
    "@peersyst/react-utils": "file:./packages/vendor/@peersyst/react-utils"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=18.6.0"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "sharp": true,
      "eslint-plugin-jest>jest>jest-cli>jest-config>ts-node>@swc/core": false
    }
  }
}
